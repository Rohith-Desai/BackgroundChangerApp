                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="PLEASE RATE US"
                            android:textAlignment="center"
                            android:textColor="@color/light_black"
                            android:textSize="14sp" />

